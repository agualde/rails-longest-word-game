<div class="container">
<h1>New Game!</h1>

<ul>
<% @letters.each do |letter| %>
<li id="letter"><%= letter %></li>
<% end %>
</ul>


<form action="/score" method="post">
  <input type="text" name="word" placeholder="Could you find a word?">
  <input type="submit" class="btn-medium">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
  <%= hidden_field_tag :data, @letters%>
</form>


</div>
